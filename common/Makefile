ifndef config
  config=debug_x64
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild prelink

ifeq ($(config),debug_x64)
  RESCOMP = windres
  TARGETDIR = ../lib
  TARGET = $(TARGETDIR)/common-debug-x64-gcc.lib
  OBJDIR = ../_build_/debug-x64-gcc/x64/debug/common
  DEFINES += -D_DEBUG=1 -DGLEW_STATIC
  INCLUDES += -I../external/glfw/include -I../external/glew-1.13.0/include -I../external/glm-0.9.7.1
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g -march=native -Wall -pthread
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++17 -march=native -Wall -pthread
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += -lOpenGL32
  LDDEPS +=
  ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64 -pthread
  LINKCMD = $(AR) -rcs "$@" $(OBJECTS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
all: prebuild prelink $(TARGET)
	@:

endif

ifeq ($(config),release_x64)
  RESCOMP = windres
  TARGETDIR = ../lib
  TARGET = $(TARGETDIR)/common-release-x64-gcc.lib
  OBJDIR = ../_build_/release-x64-gcc/x64/release/common
  DEFINES += -DNDEBUG=1 -DGLEW_STATIC
  INCLUDES += -I../external/glfw/include -I../external/glew-1.13.0/include -I../external/glm-0.9.7.1
